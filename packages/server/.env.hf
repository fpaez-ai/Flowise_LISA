# Hugging Face Spaces deployment configuration for Flowise
# Update the secrets and credentials before uploading

PORT=7860
HOST=0.0.0.0

# Persist the SQLite database and storage blobs on the HF /data volume
DATABASE_TYPE=sqlite
DATABASE_PATH=/data/flowise/database
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/data/flowise/storage

# Persist encryption key material in the same volume
SECRETKEY_STORAGE_TYPE=local
SECRETKEY_PATH=/data/flowise/secret
FLOWISE_SECRETKEY_OVERWRITE=REPLACE_WITH_RANDOM_32_CHAR_SECRET

# Auth credentials for the admin panel (change both values)
FLOWISE_USERNAME=LISA_GUFO
FLOWISE_PASSWORD=Plisa2114.

# Generate long random strings for the JWT secrets
JWT_AUTH_TOKEN_SECRET=REPLACE_WITH_RANDOM_64_CHAR_SECRET
JWT_REFRESH_TOKEN_SECRET=REPLACE_WITH_RANDOM_64_CHAR_SECRET
JWT_ISSUER=FlowiseHF
JWT_AUDIENCE=FlowiseUsersHF

# Disable telemetry in HF Spaces unless explicitly required
DISABLE_FLOWISE_TELEMETRY=true

# Optional: point to your public URL if you use OAuth integrations
# APP_URL=https://<your-space-name>.hf.space

# Optional SMTP configuration for password reset/email features
# SMTP_HOST=
# SMTP_PORT=465
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_SECURE=true
